{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",  // Include TypeScript files
    "src/**/*.d.ts", // Include declaration files
    "src/**/*.tsx", // Include JSX files if used
    "src/**/*.vue"  // Include Vue components
  ]
}
